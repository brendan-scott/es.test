@model Emergent.Code.Test.Models.ViewModels.SoftwareViewModel

@{
    ViewData["Title"] = "Software Query Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-9">
            @Html.LabelFor(m => m.Version)
            @Html.TextBoxFor(m => m.Version, new { @class = "form-control-lg", @placeholder = "i.e. 1.2.3" })
        </div>
        <div class="col-3">
            <button id="query-btn" type="button" class="btn btn-primary disabled" disabled>Query</button>
        </div>
    </div>
    <div class="row">
        @await Html.PartialAsync("_Software", Model)
    </div>
</div>